<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="75dp"
        android:layout_height="42dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="17dp"
        android:text="Blue"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/blueSlider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <view
        android:id="@+id/greenSlider"
        class="com.google.android.material.slider.Slider"
        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="67dp"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="255"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <view
        android:id="@+id/redSlider"
        class="com.google.android.material.slider.Slider"
        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="67dp"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="255"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="SpeakableTextPresentCheck" />

    <view
        android:id="@+id/blueSlider"
        class="com.google.android.material.slider.Slider"
        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="67dp"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="255"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="73dp"
        android:layout_height="43dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="17dp"
        android:text="Green"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/blueSlider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="17dp"
        android:text="Red"
        android:textAlignment="center"
        android:textColor="#F60000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/blueSlider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="283dp"
        android:layout_height="142dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueSlider" />
</androidx.constraintlayout.widget.ConstraintLayout>